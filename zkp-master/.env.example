// Environment configuration for ZKP Master Module
// Copy this file to .env and configure for your environment

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
MODULE_PUBLIC_KEYS=test_pan_key_123,test_email_key_456,test_passport_key_789

# Rate Limiting
MAX_REQUESTS_PER_IP=100
MAX_REQUESTS_PER_SESSION=20

# Circuit Configuration
CIRCUIT_COMPILE_TIMEOUT=300000
PROOF_GENERATION_TIMEOUT=120000
MAX_CIRCUIT_SIZE=100000

# Privacy Configuration
NULLIFIER_TTL_HOURS=24
SESSION_TTL_MINUTES=60
MAX_SESSIONS_PER_USER=10

# Database Configuration (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/zkp_master
# REDIS_URL=redis://localhost:6379

# Key Management (for production)
# KMS_PROVIDER=aws
# AWS_KMS_KEY_ID=your-kms-key-id
# AWS_REGION=us-east-1

# Blockchain Configuration (optional)
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-project-id
# ANCHOR_CONTRACT_ADDRESS=0x...
# PRIVATE_KEY=0x... (for contract interactions)

# Monitoring Configuration
# SENTRY_DSN=https://your-sentry-dsn
# DATADOG_API_KEY=your-datadog-key

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Circuit-specific Configuration
PAN_CIRCUIT_MAX_CONSTRAINTS=5000
EMAIL_CIRCUIT_MAX_CONSTRAINTS=3000
MASTER_CIRCUIT_MAX_CONSTRAINTS=20000

# Performance Configuration
PROOF_WORKER_THREADS=4
WITNESS_GENERATION_TIMEOUT=30000
VERIFICATION_TIMEOUT=5000

# Development/Testing Configuration
ENABLE_DEBUG_ENDPOINTS=true
MOCK_MODULE_SIGNATURES=true
SKIP_SIGNATURE_VERIFICATION=false